<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title - Sistema de Biblioteca</title>

    <!-- Bootstrap 5.3.3 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        .card-container {
            min-width: 320px;
            max-width: 75%;
            width: 100%;
            margin: 20px auto;
            margin-top: 80px;
        }
        
    </style>
</head>
<body>

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="#">Developer Store</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
          <!--dropdown-->
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main content -->
    <div class="container d-flex justify-content-center align-items-center min-vh-100">
        <div class="card card-container shadow-lg p-4">
            @RenderBody()
        </div>
    </div>

    <!-- footer -->
    <footer class="mt-5 text-center py-3 bg-light">
        <p>© @DateTime.Now.Year - Developer Store</p>
    </footer>

</body>
</html>
